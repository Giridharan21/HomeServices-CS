@model List<DataAccessLayer.Models.ServiceProviderModel>
@{ ViewBag.Title = "List of Service Providers";}
    <div class="CustomerList">
        <h2>Select the Service Provider You want to Place the order</h2>
        <table class="CustomerList_Table">
            <tr>
                <th>
                    SP ID
                </th>
                <th>
                    SP Name
                </th>
                <th>
                    Rating
                </th>
                <th>
                    Schedule Date
                </th>
                <th>
                    Price
                </th>
                <th colspan="2">
                    Action
                </th>
            </tr>
            @foreach (var i in Model) {
                <tr>
                    <td>
                        @i.ServiceProviderId
                    </td>
                    <td>
                        @i.ServiceProviderName
                    </td>
                    <td>
                       
                        @i.Rating
                    </td>
                    @using (Html.BeginForm("PlaceOrder", "CustomerDashboard", FormMethod.Post)) {
                        <td>
                            <input type="datetime-local" name="ScheduledDate" required />
                        </td>
                        <td>
                            <input type="text" readonly value=@i.Price name="Price" />
                        </td>
                        <td>
                            <input type="hidden" name="CustomerId" value=@i.CustomerId />
                            <input type="hidden" name="ServiceProviderId" value=@i.ServiceProviderId />

                            <input type="submit" value="Place Order" />
                        </td>

                    }

                    @*@using (Html.BeginForm("PlaceOrder","CustomerDashboard",FormMethod.Post))
                    {
                        <td><input type="datetime-local" name="ScheduleDate" /></td>
                        <td><input type="hidden" name="ServiceProviderId" value="@i.ServiceProviderId" /></td>
                        <td><input type="submit" value="Place Order" /></td>

                    }*@

                </tr>
            }
        </table>

    </div>
