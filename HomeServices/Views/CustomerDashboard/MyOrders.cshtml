@model List<DataAccessLayer.Models.OrderData>

@{ ViewBag.Title = "My Orders";}
@{
    var Placed = 0;
    var Accepted = 0;
    var Cancelled = 0;
    foreach (var i in Model) {
        if (i.status == "Active") {
            Placed++;
        }
        else if (i.status == "Completed" || i.status == "Declined") {
            Cancelled++;
        }
        else if (i.status == "Accepted" || i.status == "Served") {
            Accepted++;
        }


    }
}
<div class="CustomerList">

    <h3>Orders Placed</h3>
    @if (Placed == 0) {
        <h2>No Orders Yet...</h2>
    }
    else {
        <table class="CustomerList_Table">
            <tr>
                <th>
                    Order ID
                </th>
                <th>
                    Ordered By
                </th>
                <th>
                    WorkDone By
                </th>
                <th>
                    Status
                </th>
                <th>
                    Ordered Date
                </th>
                <th>
                    Scheduled Date
                </th>
                <th>
                    Price
                </th>
                <th colspan="2">
                    Action
                </th>
            </tr>
            @foreach (var i in Model) {
                if (i.status == "Active") {
                    <tr>
                        <td>
                            @i.id
                        </td>
                        <td>
                            @i.fromid
                        </td>
                        <td>
                            @i.toid
                        </td>
                        <td>
                            @i.status
                        </td>
                        <td>
                            @i.ordereddate
                        </td>
                        <td>
                            @i.scheduleddate
                        </td>
                        <td>
                            @i.price
                        </td>
                        <td>
                            @using (Html.BeginForm("ChangeStatus", "CustomerDashboard", FormMethod.Post)) {
                                <input type="hidden" name="OrderId" value=@i.id />
                                <input type="hidden" name="Status" value="Order Cancelled" />

                                <input type="submit" value="Cancel" />
                            }
                        </td>
                    </tr>
                }

            }
        </table>
    }<br />
    <br />
    <h3>Accepted Orders and Server Orders</h3>
    @if (Accepted == 0) {
        <h2>No Orders Yet...</h2>
    }
    else {
<table class="CustomerList_Table">
    <tr>
        <th>
            Order ID
        </th>
        <th>
            Ordered By
        </th>
        <th>
            WorkDone By
        </th>
        <th>
            Status
        </th>
        <th>
            Ordered Date
        </th>
        <th>
            Scheduled Date
        </th>
        <th>
            Price
        </th>
        <th colspan="2">
            Action
        </th>
    </tr>
    @foreach (var i in Model) {
        if (i.status == "Accepted" || i.status == "Served") {
            <tr>
                <td>
                    @i.id
                </td>
                <td>
                    @i.fromid
                </td>
                <td>
                    @i.toid
                </td>
                <td>
                    @i.status
                </td>
                <td>
                    @i.ordereddate
                </td>
                <td>
                    @i.scheduleddate
                </td>
                <td>
                    @i.price
                </td>
                <td>
                    @if (i.status == "Accepted") {
                        using (Html.BeginForm("ChangeStatus", "CustomerDashboard", FormMethod.Post)) {
                            <input type="hidden" name="OrderId" value=@i.id />
                            <input type="hidden" name="Status" value="Cancel" />

                            <input type="submit" value="Cancel" />
                        }

                    }
                    else if (i.status == "Served") {
                        using (Html.BeginForm("Pay", "Payment", FormMethod.Get)) {
                            <input type="hidden" name="OrderId" value=@i.id />

                            <input type="submit" value="Pay" />
                        }
                    }
                </td>
            </tr>
        }

    }
</table>
    }
    <br />
    <br />
    <h3>Completed Orders and Cancelled Orders</h3>
    @if (Cancelled == 0) {
        <h2>No Orders Yet...</h2>
    }
    else {
<table class="CustomerList_Table">
    <tr>
        <th>
            Order ID
        </th>
        <th>
            Ordered By
        </th>
        <th>
            WorkDone By
        </th>
        <th>
            Status
        </th>
        <th>
            Ordered Date
        </th>
        <th>
            Scheduled Date
        </th>
        <th>
            Price
        </th>
        <th colspan="2">
            Action
        </th>
    </tr>
    @foreach (var i in Model) {
        if (i.status == "Completed" || i.status == "Declined") {
            <tr>
                <td>
                    @i.id
                </td>
                <td>
                    @i.fromid
                </td>
                <td>
                    @i.toid
                </td>
                <td>
                    @i.status
                </td>
                <td>
                    @i.ordereddate
                </td>
                <td>
                    @i.scheduleddate
                </td>
                <td>
                    @i.price
                </td>
                <td>
                    @using (Html.BeginForm("Index", "review", FormMethod.Get)) {
                        <input type="hidden" name="OrderId" value=@i.id />


                        <input type="submit" value="Add Review" />
                    }
                </td>
            </tr>
        }

    }
</table>
    }
    <script>
    @Html.Raw(ViewBag.Payment)
    </script>

</div>